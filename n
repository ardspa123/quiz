  useEffect(() => {
    if (step === "screensaver") {
      const interval = setInterval(() => {
        setCurrentSaver((i) => (i + 1) % screensavers.length);
      }, 3000);
      return () => clearInterval(interval);
    }
  }, [step]);

  const questions = [
