  const getScoreByTime = (ms) => {
    const seconds = ms / 1000;
    if (seconds <= 0.5) return 11;
    if (seconds <= 1) return 10;
    if (seconds <= 1.5) return 9;
    if (seconds <= 2) return 8;
    if (seconds <= 3) return 6;
    if (seconds <= 4) return 4;
